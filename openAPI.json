  "components": {
    "schemas": {
      "asin": {
        "type": "string",
        "description": "An ASIN for Books, Series or Genres",
        "pattern": "[A-Z0-9]{10}|[0-9]{10,12}"
      },
      "region": {
        "type": "string",
        "enum": [
          "us",
          "ca",
          "uk",
          "au",
          "fr",
          "de",
          "jp",
          "it",
          "in",
          "es",
          "br"
        ],
        "default": "us",
        "description": "The region of the requested item. This region is not always the only option; it simply represents the first region for books. For authors and series, there is only one ASIN per region. "
      },
      "Book": {
        "type": "object",
        "properties": {
          "asin": {
            "$ref": "#/components/schemas/asin"
          },
          "title": {
            "type": "string",
            "description": "The title of the book"
          },
          "subtitle": {
            "type": "string",
            "description": "The subtitle of the book",
            "nullable": true
          },
          "description": {
            "type": "string",
            "description": "A detailed description of the book that is being requested",
            "nullable": true
          },
          "summary": {
            "type": "string",
            "description": "A short description of the book that is being requested",
            "nullable": true
          },
          "region": {
            "type": "string",
            "enum": [
              "us",
              "ca",
              "uk",
              "au",
              "fr",
              "de",
              "jp",
              "it",
              "in",
              "es",
              "br"
            ],
            "default": "us"
          },
          "regions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/region"
            },
            "deprecated": true
          },
          "publisher": {
            "type": "string",
            "nullable": true
          },
          "copyright": {
            "type": "string",
            "nullable": true
          },
          "isbn": {
            "type": "string",
            "nullable": true
          },
          "language": {
            "type": "string",
            "nullable": true
          },
          "rating": {
            "type": "number"
          },
          "bookFormat": {
            "type": "string",
            "nullable": true
          },
          "releaseDate": {
            "type": "string"
          },
          "explicit": {
            "type": "boolean"
          },
          "hasPdf": {
            "type": "boolean"
          },
          "imageUrl": {
            "type": "string",
            "description": "The url of the book",
            "nullable": true
          },
          "lengthMinutes": {
            "type": "number",
            "nullable": true
          },
          "updatedAt": {
            "type": "string",
            "nullable": true
          },
          "whisperSync": {
            "type": "boolean"
          },
          "link": {
            "type": "string",
            "description": "Product link"
          },
          "authors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Author"
            }
          },
          "narrators": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Narrator"
            }
          },
          "series": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "asin": {
                  "$ref": "#/components/schemas/asin"
                },
                "name": {
                  "type": "string"
                },
                "position": {
                  "type": "string",
                  "nullable": true
                },
                "description": {
                  "type": "string",
                  "nullable": true
                },
                "updatedAt": {
                  "type": "string",
                  "format": "date-time"
                }
              },
              "required": [
                "asin",
                "name"
              ]
            }
